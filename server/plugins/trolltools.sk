				send "&CSOMETHING IS WRONG WITH YOUR MINECRAFT PLEASE RESTART" to arg 1
			wait a second	
			loop 20 times:
				send "&CSOMETHING IS WRONG WITH YOUR MINECRAFT PLEASE RESTART" to arg 1
			wait a second	
			loop 20 times:
				send "&CSOMETHING IS WRONG WITH YOUR MINECRAFT PLEASE RESTART" to arg 1
			wait a second	
			loop 20 times:
				send "&CSOMETHING IS WRONG WITH YOUR MINECRAFT PLEASE RESTART" to arg 1
			wait a second	
			loop 20 times:
				send "&CSOMETHING IS WRONG WITH YOUR MINECRAFT PLEASE RESTART" to arg 1
			wait a second	
			loop 20 times:
				send "&CSOMETHING IS WRONG WITH YOUR MINECRAFT PLEASE RESTART" to arg 1
			wait 3 seconds
			loop 20 times:
				send "&CSOMETHING IS WRONG WITH YOUR MINECRAFT PLEASE RESTART" to arg 1
			wait 2 seconds	
			loop 50 times:
				send "&CSOMETHING IS WRONG WITH YOUR MINECRAFT PLEASE RESTART" to arg 1
			wait a second				

command /coolkick <player>:
	permission: {@permission}
	permission message: {@permissionmsg}
	trigger:
		if arg 1 is a player:
			if arg 1 is online:
				if player has permission "troll.admin":
					send "{@prefix} &fTrolled <##ff03f2>%arg-1% &fSuccessfully!"
					kick arg 1 due to "&f%player% &fTrolled you :D"

command /chatfreeze <player>:
	permission: {@permission}
	permission message: {@permissionmsg}
	trigger:
		if arg 1 is a player:
			send "{@prefix} &fTrolled <##ff03f2>%arg-1% &fSuccessfully!"
			set {chat.%arg-1%} to true

command /chatunfreeze <player>:
	permission: {@permission}
	permission message: {@permissionmsg}
	trigger:
		if arg 1 is a player:
			send "{@prefix} &fUnTrolled <##ff03f2>%arg-1% &fSuccessfully!"
			set {chat.%arg-1%} to false

command /soundspam <player>:
	permission: {@permission}
	permission message: {@permissionmsg}
	trigger:
		if arg 1 is a player:
			send "{@prefix} &fTrolled <##ff03f2>%arg-1% &fSuccessfully!"
			loop 10 times:
				play sound "entity.ender_dragon.growl" with volume 10 to player
			wait 3 seconds
			loop 10 times:
				play sound "entity.bat.death" with volume 10 to player
			wait 15 seconds
			loop 10 times:
				play sound "entity.enderman.scream" with volume 10 to player
				
on chat:
	if {chat.%player%} is true:
		cancel event
		
on join:
	if {chat.%player%} isn't set:
		set {chat.%player%} to false
		
command /smitespam <player>:
	permission: {@permission}
	permission message: {@permissionmsg}
	trigger:
		if arg 1 is a player:
			loop 30 times:
				strike lightning at arg 1
			send "{@prefix} &fTrolled <##ff03f2>%arg-1% &fSuccessfully!"